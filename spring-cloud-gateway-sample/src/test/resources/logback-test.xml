<?xml version="1.0" encoding="UTF-8"?>
<!--
  Test configuration for Logback
  This configuration is used only during test execution
-->
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set appropriate log levels for testing -->
    <logger name="org.springframework.cloud.gateway" level="WARN"/>
    <logger name="org.springframework.http.server.reactive" level="WARN"/>
    <logger name="org.springframework.web.reactive" level="WARN"/>
    <logger name="reactor.netty" level="WARN"/>
    <logger name="org.springframework.boot.test" level="WARN"/>

    <!-- Test classes - show INFO and DEBUG logs -->
    <logger name="org.springframework.cloud.gateway.sample" level="INFO"/>

    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
